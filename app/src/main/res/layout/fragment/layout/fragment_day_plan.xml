<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.timemanagement.DayPlan.DayPlan">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:id="@+id/title_layout">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0000.00.00"
            android:textColor="#fff"
            android:textSize="24dp"/>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/TabTitle"
        android:layout_alignBottom="@id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:tabIndicatorColor="#00ffffff"
        app:tabGravity="fill"
        android:visibility="gone">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/showTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/planTableTop"
        android:layout_marginBottom="30dp">

    </android.support.v4.view.ViewPager>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="至今获得羽毛数"
        android:layout_alignParentBottom="true"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/featherNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="30dp"/>
</RelativeLayout>
