<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.timemanagement.HomePage">

    <FrameLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/planTableButtom">
    </FrameLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/planTableButtom"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:gravity="center">
        <RadioButton
            android:checked="true"
            android:drawableTop="@drawable/radiodayplan"
            android:id="@+id/DayPlan"
            android:text="日程"
            style="@style/HomePageRadio" />

        <RadioButton
            android:drawableTop="@drawable/radioweekplan"
            android:id="@+id/WeekPlan"
            android:text="习惯"
            style="@style/HomePageRadio" />

        <RadioButton
            android:drawableTop="@drawable/radiomonthplan"
            android:text=""
            style="@style/HomePageRadio"/>

        <RadioButton
            android:drawableTop="@drawable/radiomonthplan"
            android:id="@+id/MonthPlan"
            android:text="月计划"
            style="@style/HomePageRadio" />

        <RadioButton
            android:drawableTop="@drawable/radiopersonal"
            android:id="@+id/PersonalCentre"
            android:text="我的"
            style="@style/HomePageRadio" />


    </RadioGroup>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/planMaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="#ff87ffeb"
        app:rippleColor="#33728dff"
        android:layout_alignParentBottom="true"
        app:fabSize="normal"
        android:src="@mipmap/jiahao"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>